/* ===============================
   Toggles
   =============================== */
AdvancedAnimatedToggle {
    qproperty-offColor: ${accent_secondary};
    qproperty-onColor: ${accent_primary};
    qproperty-handleColor: ${border_default};
    qproperty-borderColor: ${border_default};
}

AdvancedAnimatedToggle:hover {
    qproperty-offColor: ${accent_secondary_hover};
}

AdvancedAnimatedToggle:checked {
    border-color: ${accent_primary};
}

/* ===============================
   Text Inputs
   =============================== */
QLineEdit, QTextEdit {
    background-color: ${surface_widget};
    color: ${text_primary};
    border: 1px solid ${border_default};
    border-radius: 4px;
}

/* ===============================
   Labels
   =============================== */
QLabel {
    color: ${text_primary};
}

/* ===============================
   Buttons
   =============================== */
QPushButton {
    background-color: ${accent_primary};
    color: ${text_primary};
    border-radius: 4px;
}

QPushButton:hover {
    background-color: ${accent_primary_hover};
}

QPushButton[editable="false"] {
    opacity: 0.6;
}

QPushButton[editable="true"] {
    opacity: 1.0;
}

/* ===============================
   Containers (intensity-based)
   =============================== */
#main_panel {
    background-color: ${main_panel};
}

#sidebar {
    background-color: ${sidebar};
}

#popup {
    background-color: ${popup};
}
